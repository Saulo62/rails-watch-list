<h1 class="text-center">My Movie Lists</h1>

<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <h5 class="card-title"><%= list.name %></h5>
          <%= link_to "View List", list_path(list), class: "btn btn-primary mt-2" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Create New List", new_list_path, class: "btn btn-success" %>
  </div>
</div>
