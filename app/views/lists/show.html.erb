<div class="container">
  <h1 class="text-center mb-4"><%= @list.name %></h1>

  <% if @list.bookmarks.any? %>
    <ul class="list-group mb-4">
      <% @list.bookmarks.each do |bookmark| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= bookmark.movie.title %></strong><br>
            <small><%= bookmark.comment %></small>
          </div>
          <%= button_to "Delete", list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No bookmarks yet.</p>
  <% end %>

  <%= render 'bookmarks/form', list: @list, bookmark: Bookmark.new %>

  <div class="mt-3">
    <%= link_to "Back to all lists", lists_path, class: "btn btn-secondary" %>
  </div>
</div>
